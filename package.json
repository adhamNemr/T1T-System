{
  "name": "t1t-cafe-system",
  "private": true,
  "version": "1.0.0",
  "description": "A high-performance, secure, and visually stunning management system for premium cafes and stores.",
  "author": "Adham Nemr",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/adhamNemr/T1T-System.git"
  },
  "main": "electron/main.js",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "electron:dev": "concurrently \"npm run dev\" \"wait-on http://localhost:5173 && electron .\"",
    "electron:build": "vite build && electron-builder"
  },
  "dependencies": {
    "@supabase/supabase-js": "^2.90.0",
    "clsx": "^2.1.1",
    "electron-store": "^11.0.2",
    "exceljs": "^4.4.0",
    "framer-motion": "^11.18.2",
    "fs-extra": "^11.3.3",
    "lucide-react": "^0.468.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "tailwind-merge": "^2.6.0",
    "xlsx": "^0.18.5"
  },
  "devDependencies": {
    "@vitejs/plugin-react-swc": "^3.5.0",
    "autoprefixer": "^10.4.20",
    "concurrently": "^9.1.0",
    "electron": "^39.2.7",
    "electron-builder": "^25.1.8",
    "postcss": "^8.4.49",
    "tailwindcss": "^3.4.16",
    "vite": "^6.0.0",
    "wait-on": "^8.0.1"
  },
  "build": {
    "appId": "com.t1t.system",
    "productName": "T1T System",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "electron/**/*",
      "public/**/*"
    ],
    "win": {
      "target": "nsis",
      "icon": "public/assets/logo.png"
    },
    "mac": {
      "target": "dmg",
      "icon": "public/assets/logo.png"
    }
  }
}
